#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Add common Node.js paths to PATH for Obsidian Git plugin
export PATH="$PATH:/usr/local/bin:/opt/homebrew/bin:$HOME/.local/bin"

# Add nvm paths if available
if [ -s "$HOME/.nvm/nvm.sh" ]; then
  . "$HOME/.nvm/nvm.sh"
fi

# Run lint but don't fail the commit if it fails
npm run lint || {
  echo "⚠️  Lint check failed, but continuing with commit..."
  exit 0
}
